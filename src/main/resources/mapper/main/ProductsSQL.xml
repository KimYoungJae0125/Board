<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.products.model.dao.ProductsDao">

    <select id="getProducts" parameterType="Products" resultType="Products">
        /* sqlId = com.board.products.model.dao.ProductsDao.getProducts */

        SELECT
        *
        FROM
        PRODUCTS
    </select>


    <select id="viewProduct" parameterType="Long" resultType="Products">
        /* sqlId = com.board.products.model.dao.ViewDao.viewProduct */

        SELECT
        *
        FROM
        PRODUCTS
        WHERE
        ID = #{id}
    </select>

    <insert id="insertProduct" parameterType="Products" useGeneratedKeys="true" keyProperty="id">
        /* iBatis에서는 Selectkey가 필수였지만 MyBatis에서는 필수는 아니다.
         * 다만 Auto_Increment를 사용하지 않고 다른 방법으로 id를 증가해서 해당 id를 반환해줘야하는 경우는 SelectKey 태그를 사용해야 한다.
         */
        INSERT
        INTO
        PRODUCTS
        (
          NAME
        , PRICE
        , CONTENT
        , WRITER
        , CREATION_TIME
        )
        VALUES
        (
          #{name}
        , #{price}
        , #{content}
        , #{writer}
        , #{creationTime}
        )
    </insert>

    <update id="updateProduct" parameterType="Products">
    /* set 태그를 이용시 마지막 ,를 자동으로 제거해준다. */
        UPDATE
        PRODUCTS
        <set>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="price != null and price != ''">
            PRICE = #{price},
            </if>
            <if test="content != null and content != ''">
            CONTENT = #{content},
            </if>
        </set>
        WHERE
        Id = #{id}

    </update>

    <delete id="deleteProduct" parameterType="Long">
        DELETE
        FROM
        PRODUCTS
        WHERE
        ID = #{id}
    </delete>

</mapper>
