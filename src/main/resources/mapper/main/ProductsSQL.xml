<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.products.model.dao.ProductsDao">

    <select id="getProductList" parameterType="Products" resultType="Products">
        /* sqlId = com.board.products.model.dao.ProductsDao.getProductList */

        SELECT
        *
        FROM
        PRODUCTS
    </select>


    <select id="getProduct" parameterType="String" resultType="Products">
        /* sqlId = com.board.products.model.dao.ViewDao.getProduct */

        SELECT
        *
        FROM
        PRODUCTS
        WHERE
        PROD_ID = #{prodId}
    </select>

    <insert id="addProduct" parameterType="Products">
        INSERT
        INTO
        PRODUCTS
        (
          PROD_NAME
        , PROD_PRICE
        )
        VALUES
        (
          #{prodName}
        , #{prodPrice}
        )
    </insert>

    <delete id="deleteProduct" parameterType="String">
        DELETE
        FROM
        PRODUCTS
        WHERE
        PROD_ID = #{prodId}
    </delete>

</mapper>
